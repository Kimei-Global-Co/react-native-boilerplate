{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "types": ["node"],
    "lib": ["ESNext"],
    "module": "ESNext",
    "verbatimModuleSyntax": true,
    "noImplicitAny": true,
    "baseUrl": "./src",
    "paths": {
      "@components": ["components"],
      "@context": ["context"],
      "@navigation": ["navigation"],
      "@features": ["features"],
      "@hooks": ["hooks"],
      "@theme": ["theme"],
      "@store": ["store"],
      "@assets": ["assets"],
      "untils": ["untils"],

      "@components/*": ["components/*"],
      "@context/*": ["context/*"],
      "@navigation/*": ["navigation/*"],
      "@features/*": ["features/*"],
      "@hooks/*": ["hooks/*"],
      "@theme/*": ["theme/*"],
      "@store/*": ["store/*"],
      "@assets/*": ["assets/*"],
      "untils/*": ["untils/*"]
    }
  }
}
