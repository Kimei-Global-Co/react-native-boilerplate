{
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
  "files": [
    "!src/features/__DEV__"
  ],
	"dependencies": {
		"@discord/bottom-sheet": "Kimei-Global-Co/react-native-bottom-sheet",
		"@expo-google-fonts/nunito": "^0.4.0",
		"@formatjs/intl-locale": "^4.2.11",
		"@formatjs/intl-pluralrules": "^5.4.4",
		"@hookform/resolvers": "^5.2.1",
		"@lingui/core": "^5.3.1",
		"@lingui/react": "^5.3.1",
		"@react-navigation/bottom-tabs": "^7.3.13",
		"@react-navigation/native": "^7.1.9",
		"@react-navigation/native-stack": "^7.3.13",
		"@shopify/flash-list": "2.0.2",
		"@tanstack/react-query": "^5.76.1",
		"dayjs": "^1.11.13",
		"expo": "~53.0.9",
		"expo-build-properties": "^0.14.6",
		"expo-dev-client": "~5.2.4",
		"expo-font": "~13.3.1",
		"expo-image": "^2.1.7",
		"expo-localization": "^16.1.5",
		"expo-splash-screen": "^0.30.8",
		"expo-status-bar": "~2.2.3",
		"expo-system-ui": "^5.0.7",
		"ky": "^1.8.1",
		"lodash.get": "^4.4.2",
		"react": "19.0.0",
		"react-hook-form": "^7.56.3",
		"react-native": "0.79.5",
		"react-native-gesture-handler": "~2.24.0",
		"react-native-keyboard-controller": "^1.17.1",
		"react-native-mmkv": "^3.2.0",
		"react-native-reanimated": "~3.17.4",
		"react-native-safe-area-context": "5.4.0",
		"react-native-screens": "~4.11.1",
		"react-native-svg": "15.11.2",
		"react-native-unistyles": "^3.0.7",
		"zod": "^4.0.15"
	},
	"devDependencies": {
		"@babel/core": "^7.25.2",
		"@biomejs/biome": "2.1.3",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@lingui/babel-plugin-lingui-macro": "^5.3.1",
		"@lingui/cli": "^5.3.1",
		"@lingui/macro": "^5.3.1",
		"@lingui/metro-transformer": "^5.3.1",
		"@react-native/eslint-config": "^0.79.2",
		"@testing-library/react-native": "^13.2.0",
		"@types/jest": "^29.5.14",
		"@types/lodash.get": "^4.4.9",
		"@types/react": "~19.0.0",
		"@types/react-test-renderer": "19.0.0",
		"@typescript-eslint/parser": "^8.19.0",
		"babel-jest": "^29.7.0",
		"babel-plugin-macros": "^3.1.0",
		"babel-plugin-react-compiler": "^19.1.0-rc.2",
		"commitizen": "^4.3.1",
		"cz-conventional-changelog": "^3.3.0",
		"danger": "^13.0.4",
		"eas-build-cache-provider": "^16.4.2",
		"expo-atlas": "^0.4.0",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"jest-expo": "^53.0.5",
		"lint-staged": "^16.0.0",
		"patch-package": "^8.0.0",
		"postinstall-postinstall": "^2.1.0",
		"react-native-nitro-modules": "0.26.4",
		"react-test-renderer": "19.0.0",
		"reassure": "^1.4.0",
		"typescript": "~5.8.3"
	},
	"engines": {
		"node": ">=20"
	},
	"expo": {
		"doctor": {
			"reactNativeDirectoryCheck": {
				"listUnknownPackages": false
			}
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,jsonc,css}": [
			"biome lint --write --staged",
			"biome format --write --staged"
		]
	},
	"main": "index.ts",
	"name": "RNBoilerplate",
	"private": true,
	"scripts": {
		"android": "expo run:android",
		"bundle": "EXPO_UNSTABLE_METRO_OPTIMIZE_GRAPH=1 EXPO_UNSTABLE_TREE_SHAKING=1 expo export --dev=true --output-dir=dist --platform=ios --no-minify --no-bytecode",
		"bundle:visualizer": "EXPO_UNSTABLE_METRO_OPTIMIZE_GRAPH=1 EXPO_UNSTABLE_TREE_SHAKING=1 EXPO_ATLAS=1 bunx expo start --dev-client --no-dev",
		"commit": "cz",
		"depcheck": "bunx depcheck",
		"env:pull": "eas env:pull",
		"intl:build": "lingui extract --overwrite --clean",
		"ios": "expo run:ios",
		"lint": "bunx biome check --error-on-warnings --no-errors-on-unmatched --staged ./**/*.{js,jsx,ts,tsx}",
		"perf-test": "reassure",
		"postinstall": "patch-package && bun intl:build",
		"prebuild": "expo prebuild",
		"prepare": "husky",
		"start": "EXPO_USE_FAST_RESOLVER=1 expo start --dev-client"
	},
	"version": "1.0.0"
}
